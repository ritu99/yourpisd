<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@drawable/dropshadow" >
    

	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/layout_grades_list" >
	    
	    <!--  Included for graphical preview."
		<include
        	layout="@layout/class_swipe_grade_view"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" />
    
		<include
			layout="@layout/class_swipe_grade_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
		
		-->
		
    </LinearLayout>

    
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height= "wrap_content"
        android:orientation = "horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="0dp" >
        
        <TextView
            android:id="@+id/category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/default_category_name"
            android:textStyle="bold"
            android:textSize="23sp" />
        
        <TextView
            android:id="@+id/category_score"
            android:layout_width = "wrap_content"
            android:layout_height="wrap_content" 
            android:text="@string/default_grade"
            android:textSize="30sp" />
        
    </LinearLayout>

</LinearLayout>
